<%- include('partials/header.ejs') %>
<body>
    <div id="hook">
        <header>
            <div class="navbar">
                <div class="logo">
                    <img src="logo.png" alt="" width="100px" height="100px">
                    <h1>MasterSkills</h1>
                </div>
                <div class="navMenu">
                    <div class="navItem">
                        <a href="/teacherPage" class="navLink">Home</a>
                    </div>
                </div>
            </div>
        </header>
    <div class="container" style="text-align: center; margin-top: 10px;">
        <h1>Course Addition Form</h1>
    </div>
    <div style="width: 70%; margin: auto; border: 2px solid black; text-align: center; padding: 20px 40px;">
    <form name="Add-Course-Form" action="/addCourse" method="post">
        <div class="form-group">
            <label>Course Name</label>
            <input type="Text" class="form-control" placeholder="Enter Course Name" name="courseName" required>
        </div>
        <div class="form-group">
            <label>Category Title</label>
            <input type="text" class="form-control" placeholder="Enter Category Title" name="categoryTitle" required>
        </div>
        <div class="form-group">
            <label>Video Link</label>
            <input type="text" class="form-control" placeholder="Enter Video Link"
                id="teacher-reg-email" name="videoLink" required>
        </div>
        <div class="form-group">
            <label>Course Description</label>
            <input type="text" class="form-control" id="courseDescription" name="courseDescription" required>
        </div>
        <button class="btn btn-dark" type="submit" id="add-course-button">Register</button>
    </form>
</div>
</body>
</html>
        <script>
            function efunct(){
                var x = document.getElementById("enrolledCourses")
                if(x.style.display === "none"){
                    x.style.display = "block"
                }
                else{
                    x.style.display = "none"
                }
            }

            function cfunct(){
                var x = document.getElementById("cCourses")
                if (x.style.display === "none"){
                    x.style.display = "block"
                }
                else{
                    x.style.display = "none"
                }
            }
        </script>

    </html>
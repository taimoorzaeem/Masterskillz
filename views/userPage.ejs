        <div class="UserPage-belowBox">
            <h1>View Your Certificates</h1>
            <button style="padding: 5px; background-color: black; color: white;" onclick="cfunct()">My Certificates</button>
            <div class="cCourses" id="cCourses" style="display: none; text-align: center; margin-top: 10px; color: black;">
                <% for(i=0; i < cArray.length; i++){ %>
                    <h6><a href="/certificate/<%=cArray[i].course_id%>" style="text-decoration: none;"><%= cArray[i].cname %></a></h6>
                <% } %>    
            </div>
                
        </div>

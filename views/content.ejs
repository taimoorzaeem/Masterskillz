        <div class="container" style="margin-top: 10px; text-align: center;">
            <h1>
                <%= courseName %>
            </h1>
        </div>
        <div style="margin: auto; text-align: center;">
            <iframe width="70%" height="600px" src="<%= videoLink %>"></iframe>
        </div>
        <div class="afterText" style="padding: 10px;">
            <h6>
                <%= courseDescription %>
            </h6>
            <div style="margin: 5px 0px;">
                <input type="checkbox" name="checkComplete" id="completion" onclick="checkFunction()">
                <label for="completion">I have completely watched the course and understood the concepts.</label>
            </div>
            <div>
                <button class="btn btn-dark btn-large" id="certification" disabled="true"><a id="buttonLink">Get certification</a></button>
            </div>
        </div>
    </body>

    <script>
        function checkFunction() {
            if (document.getElementById("completion").checked) {
                document.getElementById("certification").disabled = false;
                document.getElementById("buttonLink").href = "/certificate/<%= course_id %>"
            }
            else {
                document.getElementById("certification").disabled = true;
                document.getElementById("buttonLink").removeAttribute("href")
            }
        }
    </script>

    </html>